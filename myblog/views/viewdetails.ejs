<!--博客详细页-->
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<style>
		.blog-post-meta{
			color: #999;
		}
		#view_count{
			margin-left: 650px;
		}
	</style>
	<script>
		$(document).ready(function() {
			$("#view").addClass("active");
			$('#home').removeClass("active");
			$('#write').removeClass("active");
		});
	</script>
</head>
<body>
	<div class="container">
		<div class="row" style="margin-left: 60px">
			<div class="col-sm-10 blog-main">
				<div class="blog-post">
					<h2 class="blog-post-title"><%= post.title%></h2>
					<div>
					  <p class="blog-post-meta" style="width: 400px;float: left">
					    <%= post.created_at%> <!--create_at是在mongo.js里自定义的插件-->
					  </p>
					  <p id="view_count" style="width: 100px">浏览：<%= post.pv%></p>
					</div>
					<p class="text-justify" id="blog_content">
						<%= blog_content%>
					</p>
				</div>
				<div style="text-align: center;">
                  <button id="delet_btn" class="btn btn-danger" data-toggle="modal" data-target="#myModal" class="btn btn-info">删除</button>
                  <a id="edit_btn" class="btn btn-warning" href="/edit?blog_id=<%= post._id%>">编辑</a>
            	</div>
			</div>
		</div>
	</div>

	<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">确认要删除此博客吗？</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <a type="button" class="btn btn-primary" href="/viewdetails/del?blog_id=<%= post._id%>">确认</a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>

<script>
//识别文本中的html标签
	$(document).ready(function() {
		$('#blog_content').html($('#blog_content').text());
	})
</script>
</body>
</html>